<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="bottom|right"
    android:background="@drawable/background"
    android:gravity="center" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:id="@+id/frameLayout" >"

        <ImageView
            android:id="@+id/greatMap"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:src="@drawable/msginicial_pt" />

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/documents"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:layout_marginTop="30dip"
                android:clickable="true"
                android:src="@drawable/folder_icon" />

            <ImageView
                android:id="@+id/persons"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:layout_weight="0.20"
                android:clickable="true"
                android:src="@drawable/person_icon" />

            <ImageView
                android:id="@+id/about"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:layout_weight="0.07"
                android:src="@drawable/about" />

            <ImageView
                android:id="@+id/legends"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:layout_marginBottom="30dip"
                android:layout_weight="0.15"
                android:clickable="true"
                android:src="@drawable/icon_legenda" />

        </LinearLayout>

    </FrameLayout>

    <DigitalClock
        android:id="@+id/digitalClock1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="10dip"
        android:text="DigitalClock"
        android:textSize="20sp" />

   <!--  <TextView
    android:id="@+id/scan_format"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textIsSelectable="true"
    android:layout_centerHorizontal="true"
    />-->
<TextView
    android:id="@+id/scan_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textIsSelectable="true"
    android:layout_centerHorizontal="true"
    /> 
    <ImageView
        android:id="@+id/qrButton"
        android:layout_width="55dip"
        android:layout_height="55dip"
        android:layout_above="@+id/digitalClock1"
        android:layout_alignLeft="@+id/digitalClock1"
        android:src="@drawable/qricon"
        android:clickable="true" />

</RelativeLayout>